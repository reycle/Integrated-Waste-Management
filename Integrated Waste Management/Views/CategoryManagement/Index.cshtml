@model IEnumerable<Integrated_Waste_Management.Models.CategoryManagement>

@{
    ViewBag.Title = "Index";
}

<h2>Category Management</h2>

<p>
    @Html.ActionLink("Add", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WasteTypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WeightPounds)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WasteTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeightPounds)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.WasteTypeID }) |
                @Html.ActionLink("Details", "Details", new { id = item.WasteTypeID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.WasteTypeID })
            </td>
        </tr>
    }
<tr>
    <td><strong>Total:</strong></td>
    <td></td>
    <td><strong>@ViewBag.TotalWeightPounds</strong></td>
    <td></td>
</tr>

</table>
